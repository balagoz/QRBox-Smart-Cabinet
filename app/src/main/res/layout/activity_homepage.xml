<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_overlay"
        android:textAlignment="center">

        <TextView
            android:id="@+id/giris_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:text="QRBox\nUygulaması"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/dolap_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/transparent"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/platform_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/transparent"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platform"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="280dp"
            android:id="@+id/result_text"
            android:background="@color/white_tra"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="150dp"
            android:text="Platform Mesaj"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="350dp"
            android:id="@+id/dolap_text"
            android:background="@color/white_tra"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_qrscan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="QR Kod Okut"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_rent"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="140dp"
            android:background="@drawable/btn_bg2"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Dolabı Kirala"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_rent_delete"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/btn_bg3"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:text="Kiralama İptal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        android:textColor="@color/white" />
</RelativeLayout>